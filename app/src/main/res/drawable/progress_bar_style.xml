<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <gradient
                android:angle="270"
                android:centerColor="#a7aca7"
                android:centerY="0.5"
                android:endColor="#a7aca7"
                android:startColor="#a7aca7" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient
                    android:angle="0"
                    android:endColor="#8f0005"
                    android:startColor="#ff0004" />
            </shape>
        </clip>
    </item>
</layer-list>