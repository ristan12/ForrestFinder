<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_800_480"
    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aleksandar.forrestfinder.MainActivity">

    <ImageView
        android:id="@+id/title"
        android:background="@drawable/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        />

    <Button
        android:id="@+id/levels_btn"

        android:text="Levels"
        android:textColor="#FFFFFF"
        android:textSize="30sp"

        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/button_shape"
        android:shadowColor="#0008FF"
        android:shadowDx="3"
        android:shadowDy="0"
        android:shadowRadius="11"
        android:layout_below="@+id/title"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentStart="false" />

    <Button
        android:id="@+id/stats_btn"

        android:text="Statistics"
        android:textColor="#FFFFFF"
        android:textSize="30sp"

        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/button_shape"
        android:shadowColor="#0008FF"
        android:shadowDx="3"
        android:shadowDy="0"
        android:shadowRadius="11"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"

        android:layout_alignStart="@id/levels_btn"
        android:layout_alignRight="@+id/levels_btn"
        android:layout_alignEnd="@+id/levels_btn" />

    <Button
        android:id="@+id/options_btn"

        android:text="Options"
        android:textColor="#FFFFFF"
        android:textSize="30sp"

        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/button_shape"
        android:shadowColor="#0008FF"
        android:shadowDx="3"
        android:shadowDy="0"
        android:shadowRadius="11"
        android:layout_below="@+id/title"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentEnd="false" />

    <Button
        android:id="@+id/exit_btn"

        android:text="Exit"
        android:textColor="#FFFFFF"
        android:textSize="30sp"

        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/button_shape"
        android:shadowColor="#0008FF"
        android:shadowDx="3"
        android:shadowDy="0"
        android:shadowRadius="11"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_alignStart="@id/options_btn"
        android:layout_alignRight="@+id/options_btn"
        android:layout_alignEnd="@+id/options_btn" />

</RelativeLayout>
