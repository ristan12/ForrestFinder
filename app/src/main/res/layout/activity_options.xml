<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/portrait_background_480_800"
    tools:context=".OptionsActivity">

    <Button
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:text="Sound"
        android:id="@+id/sound"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:textSize="30dp" />

    <Button
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:text="Add New Level"
        android:id="@+id/addNewLevel"
        android:layout_above="@+id/sound"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_shape"/>

    <Button
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:text="Language"
        android:id="@+id/language"
        android:layout_below="@+id/sound"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_shape"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slikaJEBENA"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/addNewLevel"
        android:layout_alignStart="@+id/addNewLevel" />
</RelativeLayout>
