<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/levelThumb"
        android:background="@drawable/forrest_level_thumbnail"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Forrest"
        android:id="@+id/level_name"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/levelThumb"
        android:layout_toEndOf="@+id/levelThumb"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/stopwatch_image"
        android:background="@drawable/stopwatch"
        android:layout_alignTop="@+id/level_name"
        android:layout_toEndOf="@+id/xmark_image"
        android:layout_toRightOf="@+id/level_name" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/checkmark_image"
        android:background="@drawable/checkmark"
        android:layout_alignLeft="@+id/level_name"
        android:layout_alignStart="@+id/level_name"
        android:layout_alignBottom="@+id/levelThumb" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/xmark_image"
        android:background="@drawable/xmark"
        android:contentDescription=""
        android:layout_toRightOf="@+id/level_name"
        android:layout_toEndOf="@+id/level_name"
        android:layout_alignTop="@+id/checkmark_image" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="10"
        android:id="@+id/correctAns"
        android:layout_alignBottom="@+id/checkmark_image"
        android:layout_toRightOf="@+id/checkmark_image"
        android:layout_toEndOf="@+id/checkmark_image"
        android:textSize="30sp"
        android:textAlignment="textStart"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="5"
        android:id="@+id/wrongAns"
        android:layout_alignBottom="@+id/xmark_image"
        android:layout_alignLeft="@+id/stopwatch_image"
        android:layout_alignStart="@+id/stopwatch_image"
        android:textSize="30dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/xmark_image" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1:40"
        android:id="@+id/timeText"
        android:layout_alignBottom="@+id/stopwatch_image"
        android:layout_toRightOf="@+id/stopwatch_image"
        android:textSize="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="textStart"
        android:singleLine="false"
        android:padding="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />
</RelativeLayout>